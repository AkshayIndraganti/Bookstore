<%- include('partials/header'); -%>


  <div class="details content">
    <h2>All Books</h2>

    <% if (bookstores.length> 0) { %>
      <% bookstores.forEach(bookstore=> { %>
        <a class="single" href="/books/<%= bookstore.id %>">
          <p>
            <%= bookstore.bookname %>
          </p>
          <div class="content">
            <p>
              <%= bookstore.author %>
            </p>
          </div>
          <div class="content">
            <p>
              <%= bookstore.language %>
            </p>
          </div>
          <div class="content">
            <p>
              <%= bookstore.pages %>
            </p>
          </div>
        </a>
        <% }) %>
          <% } else { %>
            <p>There are no books to display...</p>
            <% } %>
  </div>

  <%- include('partials/footer'); -%>